{
"#import": {
    "bevy_cobweb_ui/radio_button.caf.json": "radio_button"
},

"#constants": {
    "$title_pic": "images/example_280_220.png",
    "$title_pic_x": 280.0,
    "$title_pic_y": 220.0,
    "$title_pic_size": {"x": "$$title_pic_x", "y": "$$title_pic_y"},
    "$settings_text_size": 30.0
},

"#commands": {
    "LoadImages": [[
        "$title_pic"
    ]],
    "LoadLocalizationManifest": {
        "default": {
            "id": "en-US",
            "name": "English",
            "manifest": "locales/en-US/main.ftl.ron"
        },
        "alts": [
            {
                "id": "fr-FR",
                "name": "French",
                "manifest": "locales/fr-FR/main.ftl.ron"
            }
        ]
    }
},

"menu_scene": {
    "FlexStyle": {
        "dims": {"width": {"Vw": 100.0}, "height": {"Vh": 100.0}},
        "content": {"flex_direction": "Row", "justify_main": "Center", "justify_cross": "Center"}
    },
    "BgColor": [{"Hsla": {"hue": 201.0, "saturation": 0.4, "lightness": 0.45, "alpha": 1.0}}],

    "menu": {
        "FlexStyle": {
            "dims": {
                "min_width": {"Px": 250.0},
                "height": {"Percent": 100.0},
                "border": {"right": {"Px": 2.0}}
            },
            "content": {"flex_direction": "Column", "justify_main": "FlexStart", "justify_cross": "Center"}
        },
        "BgColor": [{"Hsla": {"hue": 201.0, "saturation": 0.4, "lightness": 0.25, "alpha": 1.0}}],
        "BrColor": [{"Hsla": {"hue": 201.0, "saturation": 0.4, "lightness": 0.1, "alpha": 1.0}}],

        "title": {
            "FlexStyle": {
                "dims": {"width": {"Px": "$title_pic_x"}, "height": {"Px": "$title_pic_y"}},
                "flex": {
                    "margin": {"top": {"Px": 20.0}, "bottom": {"Px": 20.0}, "left": {"Px": 20.0}, "right": {"Px": 20.0}}
                }
            },
            "LoadedUiImage": {"texture": "$title_pic", "size": "$title_pic_size"},
            "Interactive": [],
            "Animated<UiImageColor>": {
                "values": {
                    "idle": {"Hsla": {"hue": 42.0, "saturation": 0.80, "lightness": 0.5, "alpha": 1.0}},
                    "idle_alt": {"Hsla": {"hue": 42.0, "saturation": 0.6, "lightness": 0.7, "alpha": 1.0}}
                },
                "settings": {
                    "idle": {
                        "duration": 3.0,
                        "easing": "InOutSine",
                        "loop_type": "PingPongContinous"
                    }
                }
            },

            "#c: Add barrier so hovers don't make the animation reset.":0,
            "interaction_barrier": {
                "FlexStyle": {"dims": {"width": {"Percent": 100.0}, "height": {"Percent": 100.0}}},
                "Interactive": [],
                "SetFocusPolicy": "Block"
            }
        },

        "shim": {
            "FlexStyle": {},
            "Width": [{"Percent": 75.0}],
            "Height": [{"Px": 3.0}],
            "Margin": [{"bottom": {"Px": 21.0}, "top": {"Px": 10.0}}],
            "BgColor": [{"Hsla": {"hue": 201.0, "saturation": 0.4, "lightness": 0.1, "alpha": 1.0}}]
        },

        "options": {
            "FlexStyle": {
                "dims": {"min_width": {"Px": 200.0}},
                "content": {"flex_direction": "Column", "justify_main": "FlexStart", "justify_cross": "Center"},
                "flex": {
                    "flex_grow": 1.0,
                    "flex_shrink": 3.0
                }
            }
        }
    },

    "content": {
        "FlexStyle": {
            "dims": {"height": {"Percent": 100.0}},
            "content": {"flex_direction": "Column", "justify_main": "FlexStart", "justify_cross": "FlexStart"},
            "flex": {"flex_grow": 1.0}
        }
    }
},

"home_page": {
    "AbsoluteStyle": {
        "dims": {"width": {"Percent": 100.0}, "height": {"Percent": 100.0}},
        "content": {"flex_direction": "Column", "justify_main": "Center", "justify_cross": "Center"}
    },

    "message": {
        "LocalizedText": {},
        "TextLine": {"text": "home-page-message"}
    }
},

"play_page": {
    "AbsoluteStyle": {
        "dims": {"width": {"Percent": 100.0}, "height": {"Percent": 100.0}},
        "content": {"flex_direction": "Column", "justify_main": "Center", "justify_cross": "Center"}
    },

    "message": {
        "TextLine": {"text": "TODO"}
    }
},

"settings_page": {
    "AbsoluteStyle": {
        "dims": {"width": {"Percent": 100.0}, "height": {"Percent": 100.0}},
        "content": {"flex_direction": "Column", "justify_main": "Center", "justify_cross": "Center"}
    },

    "shim1": {
        "FlexStyle": {},
        "Width": [{"Percent": 75.0}],
        "Height": [{"Px": 3.0}],
        "Margin": [{"bottom": {"Px": 10.0}, "top": {"Px": 10.0}}],
        "BgColor": [{"Hsla": {"hue": 201.0, "saturation": 0.4, "lightness": 0.1, "alpha": 1.0}}]
    },

    "audio": {
        "FlexStyle": {
            "content": {"flex_direction": "Row", "justify_main": "FlexStart", "justify_cross": "Center"}
        },

        "message": {
            "FlexStyle": {
                "flex": {"margin": {"bottom": {"Px": 1.0}}}
            },
            "TextLine": {"text": "Audio: ", "size": "$settings_text_size"}
        },
        "slider": {
            "FlexStyle": {},
            "Width": [{"Px": 200.0}]
        }
    },

    "shim2": {
        "FlexStyle": {},
        "Width": [{"Percent": 75.0}],
        "Height": [{"Px": 3.0}],
        "Margin": [{"bottom": {"Px": 10.0}, "top": {"Px": 10.0}}],
        "BgColor": [{"Hsla": {"hue": 201.0, "saturation": 0.4, "lightness": 0.1, "alpha": 1.0}}]
    },

    "vsync": {
        "options": {
            "FlexStyle": {
                "content": {"flex_direction": "Row", "justify_main": "FlexStart", "justify_cross": "Center"}
            },
            "message": {
                "FlexStyle": {
                    "flex": {"margin": {"bottom": {"Px": 1.0}}}
                },
                "TextLine": {"text": "Vsync: ", "size": "$settings_text_size"}
            }
        }
    },

    "shim3": {
        "FlexStyle": {},
        "Width": [{"Percent": 75.0}],
        "Height": [{"Px": 3.0}],
        "Margin": [{"bottom": {"Px": 10.0}, "top": {"Px": 10.0}}],
        "BgColor": [{"Hsla": {"hue": 201.0, "saturation": 0.4, "lightness": 0.1, "alpha": 1.0}}]
    },

    "language": {
        "message": {
            "TextLine": {"text": "LANGUAGE"}
        }
    },

    "shim4": {
        "FlexStyle": {},
        "Width": [{"Percent": 75.0}],
        "Height": [{"Px": 3.0}],
        "Margin": [{"bottom": {"Px": 10.0}, "top": {"Px": 10.0}}],
        "BgColor": [{"Hsla": {"hue": 201.0, "saturation": 0.4, "lightness": 0.1, "alpha": 1.0}}]
    }
},

"menu_option_button(#spec:radio_button_with_basic_text)": {
    "@base_justify_main": "Center",
    "!base_dims": {"min_width": {"Percent": 100.0}},
    "!base": {
        "Multi<Responsive<BgColor>>": [[
            {
                "values": {
                    "idle": {"Hsla": {"hue": 34.0, "saturation": 0.63, "lightness": 0.55, "alpha": 1.0}}
                }
            },
            {
                "state": ["Selected"],
                "values": {
                    "idle": {"Hsla": {"hue": 34.0, "saturation": 0.55, "lightness": 0.7, "alpha": 1.0}}
                }
            }
        ]],
        "Margin": [{"top": {"Px": 10.0}, "bottom": {"Px": 10.0}, "left": {"Px": 5.0}, "right": {"Px": 5.0}}],
        "Splat<Border>": [{"Px": 2.0}],
        "BrRadius": [{"Px": 12.0}],
        "BrColor": [{"Hsla": {"hue": 34.0, "saturation": 0.55, "lightness": 0.1, "alpha": 1.0}}]
    }
},

"settings_radio_button(#spec:radio_button_with_indicator_and_basic_text)": {
    "@base_background_color": {"Hsla": {"hue": 0.0, "saturation": 0.0, "lightness": 0.0, "alpha": 0.0}},
    "@text_size": "$settings_text_size",
    "@indicator_dot_unselected_color": {"Hsla": {"hue": 0.0, "saturation": 0.0, "lightness": 0.0, "alpha": 0.2}},
    "!indicator_dot_color_animation": {
        "hover": {"Hsla": {"hue": 0.0, "saturation": 0.0, "lightness": 0.0, "alpha": 0.5}}
    },
    "!indicator_dot_color_animation_selected": {
        "hover": {"Hsla": {"hue": 0.0, "saturation": 0.0, "lightness": 0.0, "alpha": 1.0}}
    },
    "@indicator_dot_animation_setting": {
        "enter": {"duration": 0.0265, "easing": "Linear"},
        "pointer_enter": {"duration": 0.0265, "easing": "Linear"},
        "pointer_leave": {"duration": 0.0265, "easing": "Linear"},
        "press": {"duration": 0.0265, "easing": "Linear"}
    },

    "!content": {
        "Multi<Animated<TextLineColor>>": [[
            {
                "values": {
                    "idle": {"Hsla": {"hue": 0.0, "saturation": 0.0, "lightness": 0.8, "alpha": 1.0}},
                    "hover": {"Hsla": {"hue": 0.0, "saturation": 0.0, "lightness": 0.9, "alpha": 1.0}}
                },
                "settings": "@indicator_dot_animation_setting"
            },
            {
                "state": ["Selected"],
                "values": {
                    "enter_from": {"Hsla": {"hue": 0.0, "saturation": 0.0, "lightness": 0.9, "alpha": 1.0}},
                    "idle": {"Hsla": {"hue": 0.0, "saturation": 0.0, "lightness": 1.0, "alpha": 1.0}}
                },
                "settings": "@indicator_dot_animation_setting"
            }
        ]]
    }
}
}
