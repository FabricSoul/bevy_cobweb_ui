{

"#import": {
    "examples/counter_widget_config.load.json": "base"
},

"#c: Base theme for CounterWidgets.":1,
"counter_theme" : {
    "Animated<BgColor>": {
        "values": {
            "idle": {"Hsla": {"hue": 274.0, "saturation": 0.25, "lightness": 0.55, "alpha": 0.8}},
            "hover": {"Hsla": {"hue": 274.0, "saturation": 0.32, "lightness": 0.46, "alpha": 0.8}},
            "press": {"Hsla": {"hue": 274.0, "saturation": 0.40, "lightness": 0.35, "alpha": 0.8}}
        },
        "settings": "$base::animation_settings"
    }
},

"#c: Theme override for flexible CounterWidgets.":1,
"counter_theme_flexible" : {
    "Animated<BrColor>": {
        "values": {
            "idle": {"Hsla": {"hue": 24.0, "saturation": 0.74, "lightness": 0.5, "alpha": 1.0}},
            "hover": {"Hsla": {"hue": 24.0, "saturation": 0.82, "lightness": 0.35, "alpha": 1.0}},
            "press": {"Hsla": {"hue": 24.0, "saturation": 0.90, "lightness": 0.25, "alpha": 1.0}}
        },
        "settings": "$base::animation_settings"
    },
    "Animated<Padding>": {
        "values": {
            "idle": {"left": {"Px": 2.0}, "right": {"Px": 2.0}, "top": {"Px": 2.0}, "bottom": {"Px": 2.0}},
            "press": {"left": {"Px": 0.0}, "right": {"Px": 0.0}, "top": {"Px": 0.0}, "bottom": {"Px": 0.0}}
        },
        "settings": "$base::animation_settings"
    }
},

"#c: Base node structure for CounterWidgets.":1,
"counter_widget": {
    "FlexStyle": {
        "content": {"justify_main": "Center", "justify_cross": "Center"}
    },

    "text": {
        "FlexStyle": {
            "flex": {"margin": {"top": {"Px": 10.0}, "bottom": {"Px": 10.0}, "left": {"Px": 18.0}, "right": {"Px": 18.0}}}
        },
        "TextLine": { "size": 50.0 }
    }
},

"#c: Text node for small CounterWidgets.":1,
"counter_widget_text_small": {
    "FlexStyle": {
        "flex": {"margin": {"top": {"Px": 5.0}, "bottom": {"Px": 5.0}, "left": {"Px": 9.0}, "right": {"Px": 9.0}}}
    },
    "TextLine": { "size": 25.0 }
},

"#c: Text node for CounterWidgets with responsive text.":1,
"counter_widget_text_responsive": {
    "FlexStyle": {
        "flex": {"margin": {"top": {"Px": 10.0}, "bottom": {"Px": 10.0}, "left": {"Px": 18.0}, "right": {"Px": 18.0}}}
    },
    "TextLine": { "size": 50.0 },
    "Animated<TextLineColor>": {
        "values": {
            "idle": {"Hsla": {"hue": 0.0, "saturation": 0.0, "lightness": 1.0, "alpha": 1.0}},
            "hover": {"Hsla": {"hue": 117.0, "saturation": 1.0, "lightness": 0.45, "alpha": 1.0}},
            "press": {"Hsla": {"hue": 117.0, "saturation": 1.0, "lightness": 0.35, "alpha": 1.0}}
        },
        "settings": "$base::animation_settings",
        "inherit_control": true
    }
},

"#c: Button node for flexible CounterWidgets.":1,
"counter_widget_button_flexible": {
    "FlexStyle": {
        "dims": {"border": {"top": {"Px": 2.0}, "bottom": {"Px": 2.0}, "left": {"Px": 2.0}, "right": {"Px": 2.0}}},
        "content": {"justify_main": "Center", "justify_cross": "Center"}
    }
},

"#c: Custom node structure for the app.":1,
"root": {
    "#c: Root node covers the window.":1,
    "FlexStyle": {
        "dims": {"width": {"Vw": 100.0}, "height": {"Vh": 100.0}},
        "content": {"justify_main": "SpaceEvenly", "justify_cross": "Center"}
    }
}

}
